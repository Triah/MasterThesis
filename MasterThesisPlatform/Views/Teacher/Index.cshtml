@using Microsoft.AspNetCore.Identity
@using MasterThesisPlatform.Data;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    if (user.Role.Equals("Teacher"))
    {

        <div class="current-games">
            
        </div>

        <div class="row">
            <div class="col-md-2" style="position:absolute; left:0;">
                <ul class="nav nav-pills nav-stacked">
                    <li><a asp-area="" asp-controller="Teacher" asp-action="StudentsPage">View Students</a></li>
                    <li><a asp-area="" asp-controller="Teacher" asp-action="CreateGame">Create new Game</a></li>
                </ul>
            </div>
        </div>
    }
    else
    {
        <h1>You shouldn't be here</h1>

    }


}
else
{
    <h1>No login detected</h1>

}
